<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_margin="8dp"
        android:background="@drawable/item_dark_back"
        tools:layout_gravity="right">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/item_myVideoMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

                <FrameLayout
                    android:id="@+id/item_myVideo"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:background="#fff">

                    <ImageView
                        android:id="@+id/my_VideoBack"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <Button
                        android:id="@+id/my_VideoPlay"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_play_black" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:id="@+id/item_myVideoTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="2dp"
                    android:layout_marginLeft="2dp"
                    android:padding="8dp"
                    android:textColor="@color/colorAccent" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="2dp"
                    android:layout_marginLeft="2dp"
                    android:padding="2dp"
                    app:srcCompat="@drawable/ic_check_white"
                    tools:ignore="VectorDrawableCompat" />

                <ImageView
                    android:id="@+id/item_myVideoSeen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="2dp"
                    android:layout_marginLeft="2dp"
                    android:padding="2dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_check_white"
                    tools:ignore="VectorDrawableCompat" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</LinearLayout>