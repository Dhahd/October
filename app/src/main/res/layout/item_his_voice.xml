<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="8dp"
        android:background="@drawable/item_white_back"
        tools:layout_gravity="right">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="16dp">

                <Button
                    android:id="@+id/his_voicePlay"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/ic_play_black" />
                <rm.com.audiowave.AudioWaveView
                    android:id="@+id/hisWave"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_margin="16dp"
                    app:animateExpansion="false"
                    app:chunkWidth="5dp"
                    app:chunkHeight="2dp"
                    app:minChunkHeight="2dp"
                    app:chunkSpacing="1dp"
                    app:chunkRadius="1dp"
                    app:waveColor="@android:color/black"
                    />

                <TextView
                    android:id="@+id/his_voiceDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:id="@+id/item_hisVoiceTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="2dp"
                    android:layout_marginLeft="2dp"
                    android:padding="8dp"
                    android:text="09:00 P.M"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</LinearLayout>